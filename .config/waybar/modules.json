{

    "group/leftModules": { "orientation": "horizontal",
        "modules": [
            "custom/launcher",
            "hyprland/workspaces"
        ]
    },

    "group/centerModules": {
        "orientation": "horizontal",
        "modules": [
            "wlr/taskbar"
        ]
    },

    "group/rightModules": {
        "orientation": "horizontal",
        "modules": [
            "custom/theme",
            "temperature",
            "wireplumber",
            "tray",
            "clock",
            "battery"
        ]
    },

    "hyprland/workspaces": {
        "format": "{name}{icon}",
        "format-icons": {
            "1": " 󰈹 ",
            "2": "  ",
            "3": "  ",
            "4": " 󰊗 ",
            "5": "  ",
            "6": " 󰕧 ",
            "default": " 󱁤 "
        },
        "persistent-workspaces": {
            "*": 5
        },
    },

    "custom/launcher": {
        "format": "󰣇",
        "on-click": "wofi --show drun",
        "tooltip": false
    },

    "wlr/taskbar": {
        "all-outputs": false,
        "format": "{icon}",
        "icon-theme": "Papirus",
        "icon-size": 20,
        "on-click": "activate",
        "on-click-right": "minimize",
        "on-click-middle": "close"
    },

    "temperature": {
        "interval": 10,
        "format": "{icon} {temperatureC}°C",
        "format-critical": "",
        "format-icons": ["", "", "", ""],
        "critical-threshold": 85,
        "tooltip": false
    },

    "custom/theme": {
        "format": "󰏘",
        "on-click": "~/.scripts/swwwWallpaper.sh next",
        "on-click-right": "~/.scripts/swwwWallpaper.sh prev",
        "on-click-middle": "~/.scripts/swwwWallpaper.sh rand",
        "tooltip": false
    },

    "wireplumber": {
        "format": "{icon} {volume}%",
        "format-muted": "󰝟 muted",
        "format-icons": ["󰕿","󰖀", "󰕾"],
        "on-click-right": "pavucontrol",
        "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
        "scroll-step": 5,
        "tooltip": false
    },

    "tray": {
        "icon-size": 20,
        "spacing": 5,
        "reverse-direction": false
    },

    "clock": {
        "interval": 60,
        "format": "󰥔 {:%H:%M}",
        "tooltip-format": "<tt>{calendar}</tt>",
        "calendar": {
            "mode": "month",
            "format": {
                "weekdays": "<span color='#68A8E4'>{}</span>",
                "today": "<span color='#FF5C8F'>{}</span>",
            }
        },
        "tooltip": true,
    },

    "battery": {
        "interval": 15,
        "format": "{icon} {capacity}%",
        "format-icons": ["󰂎", "󰁻", "󰁾", "󰂁", "󰁹"],
        "states": {
            "full": 100,
            "healthy": 97,
            "warning": 20,
            "critical": 10
        },
    }

}
